            <div class="row">

            <div class="col-md-12">
                <div class="form-group">
                <input type="text" class="form-control" id="name" name="name"
                    placeholder="e.g. John Doe" required>
                <div class="form-element-bar"></div>
                <label class="form-element-label" for="name">Name <sup
                    class="text-danger">*</sup></label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                <input type="email" class="form-control" id="email" name="_replyto"
                    placeholder="e.g. johndoe@website.com" required>
                <div class="form-element-bar"></div>
                <label class="form-element-label" for="email">Email <sup
                    class="text-danger">*</sup></label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                <input type="text" class="form-control" id="mobile" name="mobile_no"
                    placeholder="e.g. 12345 12345" required>
                <div class="form-element-bar"></div>
                <label class="form-element-label" for="name">Mobile Number<sup
                    class="text-danger">*</sup></label>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group">
                <input type="text" class="form-control" id="subject" name="subject"
                    placeholder="Reason for contacting" required>
                <div class="form-element-bar"></div>
                <label class="form-element-label" for="subject">Subject <sup
                    class="text-danger">*</sup></label>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group">
                <textarea class="form-control" id="message" name="message" rows="5"
                    required></textarea>
                <div class="form-element-bar"></div>
                <label class="form-element-label" for="message">Message <sup
                    class="text-danger">*</sup></label>
                </div>
            </div>

            <div class="col-12">
                <button id="send" type="submit"
                class="btn btn-primary btn-fancy btn-rounded text-uppercase float-right">Send
                Message</button>
            </div>

            </div>
        </form>

        </div> <!-- .envelop END -->

