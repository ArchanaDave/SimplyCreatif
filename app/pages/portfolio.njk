<!-- index.nunjucks -->
{% extends "layout.njk" %}

{% set page_title = "Portfolio" %}

{% block nav %}
	{{ nav.active("portfolio", host) }}
{% endblock %}

{% block content %}
<!-- Home Section START -->
<section id="home-secq" class="main-banner-inner bg-light">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<h1 class="banner-title text-primary mb-4">My Creative Works</h1>
				<p class="mb-4">I specialize in designing professional user Interfaces for web based applications that are user friendly, accessible and relevant - yet visually stunning and appealing.</p>						
				<ul class="filters-list list-inline d-sm-flex justify-content-center mb-5">
					<!-- For filtering controls add -->
					<li class="mixer current" data-filter="all" title="All"> <i class="icon-grid"></i> </li>
					 <li class="category" data-filter="1"> Graphics </li>
				<li class="category" data-filter="2"> Branding </li>
				<li class="category" data-filter="3"> Digital </li>
				<li class="category" data-filter="4"> Web Design </li>
				<li class="category" data-filter="5"> Mobile Apps </li>
					<li class="mixer" data-shuffle title="Random"> <i class="icon-shuffle"></i> </li>
					<li class="mixer" data-sortasc title="Ascending"> <i class="icon-arrow-up"></i> </li>
					<li class="mixer" data-sortdesc title="Descending"> <i class="icon-arrow-down"></i> </li>
				</ul>
			</div>
		</div>
	</div>
</section>
<!-- Home Section END -->

<!-- Portfolio Section START -->
<section id="portfolio-sec" class="section portfolio-sec bg-white">
	<div class="container">
		<div class="row filtr-container">
			{% for project in portfolio %}
			<div class="col-xl-4 col-md-6 filtr-item" data-category="{{ project.category }}">

				<div class="folio-card">
				<a href="{{host}}/portfolio/{{ project.slug }}.html" class="folio-link">
					<img class="folio-thumb" src="{{ host }}/images/portfolio/{{ project.thumbnail }}" alt="{{ project.title }}">
					<div class="card-overlay bg-darker">
					<div class="content-wrap">
						<h3 class="folio-card-title text-white">{{ project.title }}</h3>
						<p class="folio-card-desc text-light m-0">{{ project.subtitle }}</p>
					</div>
					</div>
				</a>
				<a href="{{ host }}/images/portfolio/{{ project.image }}" class="zoom-in lightbox-gallery mfp-image">
					<i class="fa fa-expand"></i>
				</a>
				</div>
			</div>
			{% else %}
				<p>There are no projects to view.</p>
			{% endfor %}
		</div>
		<div class="row">
			<div class="col-12">
				<nav aria-label="Page navigation">
					<ul class="pagination mt-5 d-flex justify-content-center">
						<li class="page-item mx-1"><a class="page-link" href="javascript:void(0);"><i class="icon-arrow-left"></i></a></li>
						<li class="page-item mx-1 disabled"><a class="page-link" href="javascript:void(0);">1</a></li>
						<li class="page-item mx-1"><a class="page-link" href="javascript:void(0);">2</a></li>
						<li class="page-item mx-1"><a class="page-link" href="javascript:void(0);">3</a></li>
						<li class="page-item mx-1"><a class="page-link" href="javascript:void(0);"><i class="icon-arrow-right"></i></a></li>
					</ul>
				</nav>
			</div>
		</div>
	</div>
</section>
<!-- Portfolio Section END -->

